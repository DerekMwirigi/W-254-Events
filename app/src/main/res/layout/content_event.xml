<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.events.EventActivity">
    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                        android:orientation="vertical"
        android:layout_centerInParent="true">
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:padding="1dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="15dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:padding="5dp"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/tvLabel"
                              android:text="Connect"
                              android:textSize="8pt"
                              android:textStyle="bold"
                              android:textColor="#525151"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/tvPlanner"
                              android:text="Connect"
                              android:textSize="5pt"
                              android:textStyle="normal"
                              android:textColor="#525151"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:weightSum="4"
                                  android:layout_marginTop="10dp"
                                  android:layout_height="wrap_content">
                        <ImageView android:layout_width="200dp"
                                   android:layout_height="wrap_content"
                                   app:srcCompat="@drawable/ic_access_time_black_24dp"
                                   android:layout_weight="3"/>
                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="vertical"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1">
                            <TextView android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/greyTwo"
                                      android:textSize="5pt"
                                      android:text="When"/>
                            <TextView android:layout_width="match_parent"
                                      android:textSize="6pt"
                                      android:textColor="@color/blackOne"
                                      android:id="@+id/tvDate"
                                      android:text="Sun 30 Sep, 10:00 AM - 7:00 PM"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:weightSum="4"
                                  android:layout_marginTop="10dp"
                                  android:layout_height="wrap_content">
                        <ImageView android:layout_width="200dp"
                                   android:layout_height="wrap_content"
                                   app:srcCompat="@drawable/ic_location_on_black_24dp"
                                   android:layout_weight="3"/>
                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="vertical"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1">
                            <TextView android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/greyTwo"
                                      android:textSize="5pt"
                                      android:text="Location"/>
                            <TextView android:layout_width="match_parent"
                                      android:textSize="6pt"
                                      android:id="@+id/tvLocation"
                                      android:textColor="@color/blackOne"
                                      android:text="KICC"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent"
                          android:layout_height="0.5dp"
                          android:padding="-5dp"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:background="@color/greyOne"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="6pt"
                              android:textColor="@color/blackOne"
                              android:id="@+id/tvDesc"
                              android:text="@string/large_text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:padding="5dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="15dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="10dp"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="match_parent"
                              android:textColor="@color/greyTwo"
                              android:textSize="6pt"

                              android:textStyle="bold"
                              android:text="Select Tickets"
                              android:layout_height="wrap_content"/>

                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:weightSum="5"
                                  android:layout_height="wrap_content">
                        <TextView android:layout_width="match_parent"
                                  android:text="Ticket Type"
                                  android:textColor="@color/greyTwo"
                                  android:textStyle="bold"
                                  android:textSize="6pt"
                                  android:padding="10dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="5"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="Price (KES)"
                                  android:textColor="@color/greyTwo"
                                  android:textStyle="bold"
                                  android:textSize="6pt"
                                  android:padding="10dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text=""
                                  android:textColor="@color/blackOne"
                                  android:textStyle="normal"
                                  android:textSize="8pt"
                                  android:padding="10dp"
                                  android:textAlignment="center"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:background="?attr/selectableItemBackgroundBorderless"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="Qty"
                                  android:textColor="@color/greyTwo"
                                  android:textStyle="bold"
                                  android:textSize="6pt"
                                  android:padding="10dp"
                                  android:textAlignment="center"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text=""
                                  android:textColor="@color/blackOne"
                                  android:textStyle="normal"
                                  android:padding="10dp"
                                  android:textSize="8pt"
                                  android:textAlignment="center"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:background="?attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTicketTypes"
                            android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btProceed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/whiteOne"
                            android:layout_marginTop="10dp"
                            app:cornerRadius="20dp"
                            app:rippleColor="@color/colorPrimary"
                            android:textStyle="normal"
                            android:layout_gravity="left"
                            app:backgroundTint="@color/greyTwo"
                            android:textAllCaps="true"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
                            android:text="Proceed to buy"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <com.wang.avi.AVLoadingIndicatorView
                android:visibility="visible"
                android:id="@+id/avi"
                app:indicatorColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:indicatorName="BallScaleMultipleIndicator"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>