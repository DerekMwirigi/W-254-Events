<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="10dp"
              android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <ImageView
                    android:id="@+id/imgImage"
                    android:layout_width="80dp"
                    android:src="@drawable/ic_shortcut_events"
                    android:layout_gravity="center"
                    android:layout_height="80dp"/>
            <com.google.android.material.card.MaterialCardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:padding="5dp"
                    app:cardElevation="8dp"
                    android:layout_below="@+id/imLogo"
                    app:cardCornerRadius="8dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:padding="10dp">
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edtFirstNameC"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            app:boxCornerRadiusTopStart="1dp"
                            app:boxCornerRadiusTopEnd="1dp"
                            app:boxCornerRadiusBottomStart="1dp"
                            app:boxCornerRadiusBottomEnd="1dp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/colorPrimary"
                            app:passwordToggleEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtFirstName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="First Name"
                                app:helperTextEnabled="true"
                                android:hint="First Name"
                                android:inputType="phone"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            app:boxCornerRadiusTopStart="1dp"
                            app:boxCornerRadiusTopEnd="1dp"
                            app:boxCornerRadiusBottomStart="1dp"
                            app:boxCornerRadiusBottomEnd="1dp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/colorPrimary"
                            app:passwordToggleEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtLastName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="Last Name"
                                app:helperTextEnabled="true"
                                android:hint="Last Name"
                                android:inputType="phone"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            app:boxCornerRadiusTopStart="1dp"
                            app:boxCornerRadiusTopEnd="1dp"
                            app:boxCornerRadiusBottomStart="1dp"
                            app:boxCornerRadiusBottomEnd="1dp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/colorPrimary"
                            app:passwordToggleEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="Email"
                                app:helperTextEnabled="true"
                                android:hint="Email"
                                android:inputType="textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            app:boxCornerRadiusTopStart="1dp"
                            app:boxCornerRadiusTopEnd="1dp"
                            app:boxCornerRadiusBottomStart="1dp"
                            app:boxCornerRadiusBottomEnd="1dp"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/colorPrimary"
                            app:passwordToggleEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="@string/uId"
                                app:helperTextEnabled="true"
                                android:hint="@string/uId"
                                android:inputType="phone"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.wang.avi.AVLoadingIndicatorView
                            android:visibility="gone"
                            android:id="@+id/avi"
                            app:indicatorColor="@color/colorPrimary"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            app:indicatorName="BallScaleMultipleIndicator"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>